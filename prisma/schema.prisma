generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?

  accounts      Account[]
  sessions      Session[]

  company       UserCompany?
  savedGrants   SavedGrant[]
  searchHistory SearchHistory[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models

model UserCompany {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  companyNumber     String
  companyName       String
  companyStatus     String?
  companyType       String?
  dateOfCreation    DateTime?
  dateOfCessation   DateTime?

  addressLine1      String?
  addressLine2      String?
  locality          String?
  region            String?
  postalCode        String?
  country           String?

  sicCodes          CompanySicCode[]
  rawCompaniesHouseData Json?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([companyNumber])
}

model CompanySicCode {
  id              String      @id @default(cuid())
  userCompanyId   String
  userCompany     UserCompany @relation(fields: [userCompanyId], references: [id], onDelete: Cascade)

  code            String
  description     String?
  section         String?
  division        String?

  @@unique([userCompanyId, code])
  @@index([code])
  @@index([section])
}

model SavedGrant {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  grantSource String
  externalId  String

  title       String
  description String?  @db.Text
  fundingBody String?
  amountMin   Decimal? @db.Decimal(15, 2)
  amountMax   Decimal? @db.Decimal(15, 2)
  currency    String?  @default("GBP")
  openDate    DateTime?
  closeDate   DateTime?
  applicationUrl String?
  categories  String[]

  rawData     Json?
  notes       String?  @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, grantSource, externalId])
  @@index([userId])
  @@index([grantSource])
}

model SearchHistory {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  query       String
  filters     Json?
  resultCount Int?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}

model SicCodeReference {
  id          String  @id @default(cuid())
  code        String  @unique
  description String
  section     String
  sectionName String
  division    String
  divisionName String
  groupCode   String?
  classCode   String?

  @@index([section])
  @@index([division])
}
